{
	"name": "libeo-ddh-generator",
	"displayName": "Libeo DDH Generator",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:libeo-ddh-generator.createDDHFolders",
		"onCommand:libeo-ddh-generator.createDDHCommand",
		"onCommand:libeo-ddh-generator.createDDHQuery",
		"onCommand:libeo-ddh-generator.createDDHEntity"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "libeo-ddh-generator.createDDHFolders",
				"title": "Create DDH Folders"
			},
			{
				"command": "libeo-ddh-generator.createDDHCommand",
				"title": "Create DDH Command"
			},
			{
				"command": "libeo-ddh-generator.createDDHQuery",
				"title": "Create DDH Query"
			},
			{
				"command": "libeo-ddh-generator.createDDHEntity",
				"title": "Create DDH Entity"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "libeo-ddh-generator.createDDHFolders",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "libeo-ddh-generator.createDDHCommand",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder && resourceFilename == commands"
				},
				{
					"command": "libeo-ddh-generator.createDDHQuery",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder && resourceFilename == queries"
				},
				{
					"command": "libeo-ddh-generator.createDDHEntity",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder && resourceFilename == domain"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.56.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}